<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header') %>
    <link rel="stylesheet" href="/styles/register.css">
</head>
<body>
    <div class="register-container">
        <h1 class="register-title">Register</h1>

        <% if (error) { %>
            <div class="error-container">
                    <p class="register-error"><%= error %></p>
            </div>
        <% } %> 

        <form method="POST" action="/register" class="register-form">
            <div class="form-group">
                <label for="form-username">Username</label>
                <input class="form-username" name="username" type="text" placeholder="Username">
            </div>

            <div class="form-group">
                <label for="form-password">Password</label>
                <input class="form-password" name="password" type="password" placeholder="Password">
            </div>

            <button class="form-button" type="submit">Register</button>
        </form>

        <a class="login-link" href="/login">Already have an account</a>
    </div>
</body>
</html>