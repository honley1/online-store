<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header') %>
    <link rel="stylesheet" href="/styles/login.css">
</head>
<body>
    <div class="login-container">
        <h1 class="login-title">Login</h1>

        <% if (error) { %>
            <div class="error-container">
                    <p class="login-error"><%= error %></p>
            </div>
        <% } %>

        <form method="POST" action="/login" class="login-form">
            <div class="form-group">
                <label for="form-username">Username</label>
                <input class="form-username" name="username" type="text" placeholder="Username">
            </div>

            <div class="form-group">
                <label for="form-password">Password</label>
                <input class="form-password" name="password" type="password" placeholder="Password">
            </div>

            <button class="form-button" type="submit">Login</button>
        </form>

        <a class="register-link" href="/register">Don't have an account</a>
    </div>
</body>
</html>